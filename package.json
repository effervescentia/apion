{
  "name": "apion",
  "version": "0.0.0-development",
  "description": "Light and flexible API client creation library.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": "https://github.com/effervescentia/apion",
  "author": "Ben Teichman <ben.teichman@groupbyinc.com>",
  "license": "MIT",
  "scripts": {
    "start": "echo 'no start script available' && exit -1",
    "prettify": "prettier --write '{src,test}/**/*.{ts,tsx}'",
    "precommit": "lint-staged"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "condition-circle": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "sinon": "^6.1.5",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-config-groupby": "^1.0.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {}
}
